<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="1dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/gen_profile_linear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="1dp"
                android:background="@color/green"
                android:layout_weight=".2">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="General Profile"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="28px"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/add_linear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="1dp"
                android:background="@color/navigation_bar"
                android:layout_weight=".2">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Address"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="28px"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/paypal_linear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="1dp"
                android:background="@color/navigation_bar"
                android:layout_weight=".2">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Paypal"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="28px"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/account_linear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="1dp"
                android:background="@color/navigation_bar"
                android:layout_weight=".2">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Account"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="28px"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/change_pass_linear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight=".2"
                android:layout_margin="1dp"
                android:background="@color/navigation_bar">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Change Password"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="28px"/>
            </LinearLayout>

        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--General Profile-->
                <LinearLayout
                    android:id="@+id/profile_linear_value"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/et_fname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/rounded_board_text"
                        android:hint="First Name"
                        android:paddingLeft="10dp"
                        android:inputType="text"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="40dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".4"
                            android:gravity="center|start"
                            android:paddingLeft="15sp"
                            android:text="Gender :"/>
                        <RadioButton
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".3"
                            android:text="Male"/>
                        <RadioButton
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".3"
                            android:text="FeMale"/>
                    </LinearLayout>
                    <EditText
                        android:id="@+id/et_lname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/rounded_board_text"
                        android:hint="Last Name"
                        android:paddingLeft="10dp"
                        android:inputType="text"/>

                    <EditText
                        android:id="@+id/et_com_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/rounded_board_text"
                        android:hint="Company Name:"
                        android:inputType="text"
                        android:minHeight="50dp"
                        android:paddingLeft="10dp" />

                    <EditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/rounded_board_text"
                        android:hint="Email"
                        android:paddingLeft="10dp"
                        android:inputType="textEmailAddress"/>
                    <EditText
                        android:id="@+id/et_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/rounded_board_text"
                        android:hint="Mobile No"
                        android:paddingLeft="10dp"
                        android:maxLength="10"
                        android:inputType="number"/>
                    <EditText
                        android:id="@+id/et_screen_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/rounded_board_text"
                        android:hint="Screen Name:"
                        android:paddingLeft="10dp"
                        android:inputType="text"/>

                    <EditText
                        android:id="@+id/et_reg_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/rounded_board_text"
                        android:hint="Registration No:"
                        android:paddingLeft="10dp"
                        android:inputType="text"/>
                    <EditText
                        android:id="@+id/et_gstax_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/rounded_board_text"
                        android:hint="GST / Tax No:"
                        android:paddingLeft="10dp"
                        android:inputType="text"/>
                    <EditText
                        android:id="@+id/et_pan_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/rounded_board_text"
                        android:hint="Pan No:"
                        android:paddingLeft="10dp"
                        android:inputType="text"/>
                    <EditText
                        android:id="@+id/et_fax_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/rounded_board_text"
                        android:hint="Fax No:"
                        android:paddingLeft="10dp"
                        android:inputType="text"/>
                    <EditText
                        android:id="@+id/et_web_link"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/rounded_board_text"
                        android:hint="Website Link:"
                        android:paddingLeft="10dp"
                        android:inputType="text"/>
                    <EditText
                        android:id="@+id/et_facebook_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/rounded_board_text"
                        android:hint="Facebook Id:"
                        android:paddingLeft="10dp"
                        android:inputType="text"/>
                    <EditText
                        android:id="@+id/et_twitter_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/rounded_board_text"
                        android:hint="Twitter Id:"
                        android:paddingLeft="10dp"
                        android:inputType="text"/>
                    <EditText
                        android:id="@+id/et_shotprofile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/rounded_board_text"
                        android:hint="Shortprofile:"
                        android:paddingLeft="10dp"
                        android:inputType="text"/>

                </LinearLayout>
                <!--Address-->
                <LinearLayout
                    android:id="@+id/address_linear_values"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/et_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/rounded_board_text"
                        android:hint="Address"
                        android:paddingLeft="10dp"
                        android:inputType="text"/>
                    <EditText
                        android:id="@+id/et_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/rounded_board_text"
                        android:hint="City"
                        android:paddingLeft="10dp"
                        android:inputType="text"/>
                    <EditText
                        android:id="@+id/et_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/rounded_board_text"
                        android:hint="State"
                        android:paddingLeft="10dp"
                        android:inputType="text"/>
                    <EditText
                        android:id="@+id/et_country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/rounded_board_text"
                        android:hint="Country"
                        android:paddingLeft="10dp"
                        android:inputType="text"/>
                    <EditText
                        android:id="@+id/et_pin_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/rounded_board_text"
                        android:hint="Pin Code"
                        android:paddingLeft="10dp"
                        android:maxLength="6"
                        android:inputType="number"/>

                </LinearLayout>
                <!--Paypal-->
                <LinearLayout
                    android:id="@+id/paypal_linear_value"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/et_paypal_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/rounded_board_text"
                        android:hint="Paypal Id:"
                        android:paddingLeft="10dp"
                        android:inputType="text"/>
                    <EditText
                        android:id="@+id/et_paypal_fname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/rounded_board_text"
                        android:hint="Paypal First Name:"
                        android:paddingLeft="10dp"
                        android:inputType="number"/>
                    <EditText
                        android:id="@+id/et_paypal_lname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/rounded_board_text"
                        android:hint="Paypal Last Name:"
                        android:paddingLeft="10dp"
                        android:inputType="text"/>
                </LinearLayout>
                <!--Account-->
                <LinearLayout
                    android:id="@+id/account_linear_value"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/et_bank_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/rounded_board_text"
                        android:hint="Bank Name"
                        android:paddingLeft="10dp"
                        android:inputType="text"/>
                    <EditText
                        android:id="@+id/et_bank_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/rounded_board_text"
                        android:hint="Account Number"
                        android:paddingLeft="10dp"
                        android:inputType="text"/>
                    <EditText
                        android:id="@+id/et_bank_holder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/rounded_board_text"
                        android:hint="Account Holder Name"
                        android:paddingLeft="10dp"
                        android:inputType="text"/>
                    <EditText
                        android:id="@+id/et_bank_ifsc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/rounded_board_text"
                        android:hint="IFSC Code"
                        android:paddingLeft="10dp"
                        android:inputType="text"/>
                </LinearLayout>
                <!--Password-->
                <LinearLayout
                    android:id="@+id/password_linear_value"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/et_cpassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:paddingLeft="10dp"
                        android:inputType="text"
                        android:layout_margin="5dp"
                        android:background="@drawable/rounded_board_text"
                        android:hint="Current Password"/>
                    <EditText android:id="@+id/et_new_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/rounded_board_text"
                        android:hint="New Password"
                        android:paddingLeft="10dp"
                        android:inputType="text"/>
                    <EditText
                        android:id="@+id/et_new_conPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/rounded_board_text"
                        android:hint="Confirm Password"
                        android:paddingLeft="10dp"
                        android:inputType="text"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

